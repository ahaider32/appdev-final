
  <div>
    <h1>
      GoodEats
    </h1>
  </div>

  <div>
    The one stop restaurant review shop for your friend group!
  </div>


<div>
  <a href="/all_restaurants">
    See all Restaurants
  </a>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a New Review!
    </h2>

    <form action="/insert_restaurant" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="cuisine_box">
          Cuisine
        </label>

        <input type="text" id="cuisine_box" name="query_cuisine">
      </div>

      <div>
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="query_location">
      </div>

      <div>
        <label for="rating_box">
          Rating
        </label>

        <input type="text" id="rating_box" name="query_rating">
      </div>

      <div>
        <label for="comment_box">
          Comment
        </label>

        <input type="text" id="comment_box" name="query_comment">
      </div>

      <div>
        <label for="user_box">
          Reviewer
        </label>

        <input type="text" id="user_box" name="query_user">
      </div>




      <button>
        Create restaurant
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Restaurant
        </th>

        <th>
          Cuisine
        </th>

        <th>
          Location
        </th>

        <th>
          Reviewer
        </th>
        <th>
          Comments
        </th>
        <th>
          Rating
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_restaurants.each do |a_restaurant| %>
      <tr>
        <td>
          <%= a_restaurant.id %>
        </td>

        <td>
          <%= a_restaurant.name %>
        </td>

        <td>
          <%= a_restaurant.cuisine %>
        </td>

        <td>
          <%= a_restaurant.location %>
        </td>

        <td>
          <%= a_restaurant.user_id %>
        </td>

        <td>
          <%= a_restaurant.comments %>
        </td>
        <td>
          <%= a_restaurant.rating %>
        </td>
        <td>
          <%= time_ago_in_words(a_restaurant.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_restaurant.updated_at) %> ago
        </td>

        <td>
          <a href="/restaurants/<%= a_restaurant.id %>">
            Show <%= a_restaurant.user_id%>'s Review  Details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
